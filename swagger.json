{
  "openapi": "3.0.0",
  "info": {
    "title": "E-Commerce Kart API",
    "version": "1.0.0",
    "description": "API documentation for E-Commerce Kart Backend",
    "contact": {
      "name": "API Support",
      "email": "mushtaqzahid888@gmail.com"
    }
  },
  "servers": [
    {
      "url": "https://ecartnewbackend-production.up.railway.app/api",
