                "properties": {
                  "paymentId": {
                    "type": "string"
                  },
                  "orderId": {
                    "type": "string"
                  },
                  "signature": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
