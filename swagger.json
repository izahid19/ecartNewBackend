                  "items",
                  "totalAmount"
                ],
                "properties": {
                  "items": {
                    "type": "array"
                  },
                  "totalAmount": {
                    "type": "number"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Order created"
          }
        }
